{% if variant == blank %}
    {% assign variant = product.selected_or_first_available_variant %}
{% endif %}

{%- capture cp_classes -%}
  {{ compare_price_class }} {% if variant.compare_at_price <= variant.price %}hidden{% endif %}
{%- endcapture -%}

{% comment %}
MTS
<span class="{{ cp_classes }} prod__compare_price mr-2 line-through text-color-secondary">
  {{ variant.compare_at_price | money }} 
</span>
{% endcomment %}

{% if variant.compare_at_price %}

  <div class="flex flex-wrap">

    <span style="font-size: 18px; display:flex; font-family: 'Minionpro';" class="{{ price_class }} prod__price text-color-regular-price">
         {{ variant.price | money }}
    </span>

    <div style="margin-left: 20px;">
      <span style="font-size: 18px; color: #888; display:flex; font-family: 'Minionpro';" class="{{ cp_classes }} mx-2 text-color-secondary">
          $1200.00 - $700.00
      </span>
      <span style="font-size: 18px; color: #000; display:flex; font-family: 'Minionpro';" class="{{ cp_classes }} mx-2 text-color-secondary">
           {{ product.price_min | money }} - {{ product.price_max | money }}
      </span>
  	</div>
  </div>


{% else %}
	<span class="{{ price_class }}prod__price text-color-regular-price cus-price-pcard cstm__prd__price">
     {{ variant.price | money }}
  	</span>
{% endif %}
