                    {{ 'customer.account.name' | t }}
                </div>
                <div class="w-2/3">
                    <span class="colr_blue">{{ customer.name }}</span>
                </div>
            </div>
            <div class="border_square border-color-border py-5 fonts_source fsz_14 wd_50 mob_wd_100 mob_fs_12 ">
                <div class="w-1/3 colr_grey">
                    {{ 'customer.account.email' | t }}
                </div>
                <div class="w-2/3">
                    <span class="colr_blue">{{ customer.email }}</span>
                </div>
            </div>
            </div>
        </div>
        <div class="flex wd_100">
            {% comment %} <a href="/account/addresses" class="fonts_source fsz_12 cus_btn txt_caps wd_100 txt_center">
                {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
            </a> {% endcomment %}
