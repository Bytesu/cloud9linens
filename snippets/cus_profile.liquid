<div class="md:px-6 lg:px-12 xl:px-16 2xl:px-48 py-8 flex">
    {% comment %} {% render 'customer-navs' %} {% endcomment %}
    <div class="px-4 md:px-8 xl:px-16 2xl:px-24 md:w-5/6 wd_100 py-8">
        {% comment %} <div class="mb-10">
            Hello
            <span class="font-semibold">{{ customer.name }}</span>
            (not <span class="font-semibold">{{ customer.name }}</span>?
            <a href="{{ routes.account_logout_url }}" class="underline">Log Out</a>)
        </div> {% endcomment %}

       

        <div class="mb-0">
            <h3 class="text-2xl font-medium mb-10   h2" style="  text-transform: uppercase !important">Profile</h3>
       <div class="flex spac_15 unflex profile-list">
            <div class="border_square border-color-border py-5 fonts_source fsz_14 wd_50 mob_wd_100 mob_fs_12 ">
