<link rel="stylesheet" href="{{ 'customer-global.css' | asset_url }}" as="style">
<style>
  main#MainContent {
    background: #f2f3f5;
}
</style>
{%- capture page_title -%}
    {{ 'customer.reset_password.title' | t }}
{%- endcapture -%}

{% comment %}
MTS
{% render 'page-title', title: page_title %}
{% endcomment %}

<div class="form-reset-password py-8 md:py-16">
    <div class="mx-auto w-5/6 md:w-2/3 lg:w-1/2 xl:w-1/3 2xl:w-1/4">
        <h1 class="text-2xl font-medium mb-4 c-title text-center">{{ 'customer.reset_password.title' | t }}</h1>
        <p class="mt-4 mb-8 c-desc text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
<br/>
        {% form 'reset_customer_password' %}
        <form-control-group>
           <label class="cus-account-label">New Password</label>
        <input type="password" name="customer[password]" id="ResetPassword"
            class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
            placeholder="{{ 'customer.reset_password.password' | t }}"></form-control-group>
<form-control-group>
   <label class="cus-account-label">Confirm New Password</label>
        <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation"
            class="form-control {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
            placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
</form-control-group>
        <button type="submit" class="sf__btn sf_btn_primary block w-full mt-4 bg-black text-white c-btn">
            {{ 'customer.reset_password.submit' | t }}
        </button>
            <br />
           {% render 'form__error', form: form %}
        {% endform %}
    </div>
</div>
