{{ 'customer-global.js' | asset_url | script_tag }}
<link rel="stylesheet" href="{{ 'customer-global.css' | asset_url }}" as="style">
<link rel="stylesheet" href="{{ 'account-global.css' | asset_url }}" as="style">

{%- capture page_title -%}
{{ 'customer.addresses.title' | t }}
{%- endcapture -%}
{% comment %} {% render 'page-title', title: page_title %} {% endcomment %}
{% render 'mani_banner' %}
<div class="md:px-6 lg:px-12 xl:px-16 2xl:px-48 flex">
    {% comment %} {% render 'customer-navs' %} {% endcomment %}
    <div class="px-4 md:px-8 xl:px-16 2xl:px-24 md:w-5/6 wd_100 py-8">
        <div class="mb-10 sf-customer__add-new-container">
            <h2 class="text-2xl font-medium mb-6 h2" style="    text-transform: uppercase;">{{ 'customer.addresses.your_addresses' | t }} ({{ customer.addresses_count }}) </h2>
            <!-- <button class="sf-customer__add-new h3 ">{{ 'customer.addresses.add_new' | t }}</button>-->
            <button class="sf-customer__add-new h3 c-font" style="    text-transform: uppercase;">Create a new address</button> 
            <div data-address-form>
                {% form 'customer_address', customer.new_address %}
                    <div class="sf-customer-form__new-wrapper hidden">
                        <div data-address-fields class="address-form my-3 sf-customer-form__new 1">
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12 ">
                                <label for="AddressFirstName" class="control-label">{{ 'customer.addresses.first_name' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" placeholder="{{ 'customer.addresses.first_name' | t }}"
                                    name="address[first_name]" id="AddressFirstName_{{ form.id }}" value="{{ form.first_name }}"
                                    autocapitalize="words">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressLastName" class="control-label">{{ 'customer.addresses.last_name' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[last_name]" id="AddressLastName_{{ form.id }}"
                                    value="{{ form.last_name }}" autocapitalize="words"
                                    placeholder="{{ 'customer.addresses.last_name' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressCompany">{{ 'customer.addresses.company' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[company]" id="AddressCompany_{{ form.id }}"
                                    value="{{ form.company }}" autocapitalize="words" placeholder="{{ 'customer.addresses.company' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressAddress1">{{ 'customer.addresses.address1' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[address1]" id="AddressAddress1_{{ form.id }}"
                                    value="{{ form.address1 }}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressAddress2">{{ 'customer.addresses.address2' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[address2]" id="AddressAddress2_{{ form.id }}"
                                    value="{{ form.address2 }}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressCity">{{ 'customer.addresses.city' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[city]" id="AddressCity_{{ form.id }}"
                                    value="{{ form.city }}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12 added">
                                <label for="AddressCountry">{{ 'customer.addresses.country' | t }}</label>
                                <select class="form-control fonts_source fsz_14 mob_fs_12" name="address[country]"
                                    id="AddressCountry_{{ form.id }}" class="address-country-option" data-form-id="{{ form.id }}"
                                    data-default="{{ customer.new_address.country_code }}">
                                </select>
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressProvince">{{ 'customer.addresses.province' | t }}</label>
                                <select class="form-control fonts_source fsz_14 mob_fs_12" name="address[province]"
                                    id="AddressProvince_{{ form.id }}" data-default="{{ customer.new_address.province_code }}">
                                </select>
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressZip">{{ 'customer.addresses.zip' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[zip]" id="AddressZip_{{ form.id }}" value="{{ form.zip }}"
                                    autocapitalize="characters" placeholder="{{ 'customer.addresses.zip' | t }}">
                            </form-control-group>
                            <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                                <label for="AddressPhone">{{ 'customer.addresses.phone' | t }}</label>
                                <input class="form-control fonts_source fsz_14 mob_fs_12" type="tel" name="address[phone]" id="AddressPhone_{{ form.id }}"
                                    value="{{ form.phone }}" pattern="[0-9\-]*" placeholder="{{ 'customer.addresses.phone' | t }}">
                            </form-control-group>
                        </div>
                        <div class="mt-3 mb-6 flex-align-center">
                            {{ form.set_as_default_checkbox }}
                            <label for="address_default_address_{{ form.id }}" class="cursor-pointer fonts_source fsz_14 mob_fs_12">
                                <span class="ml-2">{{ 'customer.addresses.set_default' | t }}</span>
                            </label>
                        </div>
                        <div class="flexd">
                            <button type="submit" class="fonts_source cus_btn mb-5 wd_100"  style="    text-transform: uppercase;">
                                {% comment %} {{ 'customer.addresses.add_new' | t }} {% endcomment %}
                                Add Address
                            </button>
                            <button type="button" data-address-toggle data-form-id="{{ form.id }}"
                                class="sf-customer__cancel-new cus_btn wd_100 "  style="    text-transform: uppercase;">
                                {{ 'customer.addresses.cancel' | t }}
                            </button>
                        </div>
                    </div>

                {% endform %}

            </div>
        </div>
        {% paginate customer.addresses by 5 %}
            {% for address in customer.addresses %}
            <div data-address class="sf-customer__address mb-5">
                <div class="sf-customer__address-info">
                    <h3 class="font-semibold text-xl pb-3 fsz_14">
                        <!-- {{ address.address1 }} -->
                        {% if address == customer.default_address %}
                            <span>{{ 'customer.addresses.default' | t }}</span>
                        {% endif %}
                    </h3>

                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.name' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.name }}</span>
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.account.email' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ customer.email }}</span>
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.company' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.company }}</span>
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.address1' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.address1 }}</span>
                            {%- assign address2 = address.address2 | strip -%}
                            {%- if address2 != '' -%}
                                <span class="colr_blue">, {{ address2 }}</span>
                            {%- endif -%}
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.country' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.country }}</span>
                            {%- assign province = address.province | strip -%}
                            {%- if province != '' -%}
                                <span class="text-color-secondary1">, {{ province }}</span>
                            {%- endif -%}
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.zip' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.zip }}</span>
                        </div>
                    </div>
                    <div class="border_square border-color-border py-5 fonts_source fsz_14 mob_fs_12">
                        <div class="w-1/3 colr_grey">
                            {{ 'customer.addresses.phone' | t }}
                        </div>
                        <div class="w-2/3">
                            <span class="colr_blue">{{ address.phone }}</span>
                        </div>
                    </div>
                    <div class="mt-6">
                        <button type="button" data-address-toggle class="c-btn mr-5 sf-customer-btn__edit mb-6 fonts_source fsz_14 mob_fs_12 cus_btn  cus_btn wd_100">
                            {{ 'customer.addresses.edit' | t }}
                        </button>
                        <form
                            class="sf-customer-form__delete sf__btn-secondary flex fonts_source fsz_14 mob_fs_12 colr_red"
                            data-address-delete-form method="post" action="/account/addresses/{{ address.id }}"
                            data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                        >
                            <input type="hidden" name="_method" value="delete" />
                            <button type="submit" class=" cus_btn wd_100">
                                {{ 'customer.addresses.delete' | t }}
                            </button>
                        </form>
                    </div>
                </div>

                {% form 'customer_address', address %}
                <div class="sf-customer-form__edit-wrapper hidden">
                    <div data-address-fields class="address-form my-3 sf-customer-form__edit">
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressFirstName" class="control-label">{{ 'customer.addresses.first_name' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" placeholder="{{ 'customer.addresses.first_name' | t }}"
                                name="address[first_name]" id="AddressFirstName_{{ form.id }}" value="{{ form.first_name }}"
                                autocapitalize="words">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressLastName" class="control-label">{{ 'customer.addresses.last_name' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[last_name]" id="AddressLastName_{{ form.id }}"
                                value="{{ form.last_name }}" autocapitalize="words"
                                placeholder="{{ 'customer.addresses.last_name' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressCompany">{{ 'customer.addresses.company' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[company]" id="AddressCompany_{{ form.id }}"
                                value="{{ form.company }}" autocapitalize="words" placeholder="{{ 'customer.addresses.company' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressAddress1">{{ 'customer.addresses.address1' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[address1]" id="AddressAddress1_{{ form.id }}"
                                value="{{ form.address1 }}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressAddress2">{{ 'customer.addresses.address2' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[address2]" id="AddressAddress2_{{ form.id }}"
                                value="{{ form.address2 }}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressCity">{{ 'customer.addresses.city' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[city]" id="AddressCity_{{ form.id }}"
                                value="{{ form.city }}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12 added">
                            <label for="AddressCountry">{{ 'customer.addresses.country' | t }}</label>
                            <select class="form-control fonts_source fsz_14 mob_fs_12" name="address[country]"
                                id="AddressCountry_{{ form.id }}" class="address-country-option" data-form-id="{{ form.id }}"
                                data-default="{{ address.country_code }}">
                            </select>
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12 added">
                            <label for="AddressProvince">{{ 'customer.addresses.province' | t }}</label>
                            <select class="form-control fonts_source fsz_14 mob_fs_12" name="address[province]"
                                id="AddressProvince_{{ form.id }}" data-default="{{ address.province_code }}">
                            </select>
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressZip">{{ 'customer.addresses.zip' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="text" name="address[zip]" id="AddressZip_{{ form.id }}" value="{{ form.zip }}"
                                autocapitalize="characters" placeholder="{{ 'customer.addresses.zip' | t }}">
                        </form-control-group>
                        <form-control-group class="form-group fonts_source fsz_14 mob_fs_12">
                            <label for="AddressPhone">{{ 'customer.addresses.phone' | t }}</label>
                            <input class="form-control fonts_source fsz_14 mob_fs_12" type="tel" name="address[phone]" id="AddressPhone_{{ form.id }}"
                                value="{{ form.phone }}" pattern="[0-9\-]*" placeholder="{{ 'customer.addresses.phone' | t }}">
                        </form-control-group>
                    </div>
                    <div class="mt-3 mb-6 fonts_source fsz_14 mob_fs_12 flex-align-center">
                        {{ form.set_as_default_checkbox }}
                        <label for="address_default_address_{{ form.id }}" class="cursor-pointer">
                            <span class="ml-2">{{ 'customer.addresses.set_default' | t }}</span>
                        </label>
                    </div>
                    <div class="">
                        <button type="submit" class="fonts_source mb-6 txt_caps fsz_14 mob_fs_12 cus_btn wd_100 c-btn">
                            {{ 'customer.addresses.update' | t }}
                        </button>
                        <button type="button" data-address-toggle data-form-id="{{ form.id }}"
                            class="sf__btn-secondary fonts_source fsz_14 mob_fs_12 sf-customer__cancel-edit txt_caps cus_btn wd_100 c-btn">
                            {{ 'customer.addresses.cancel' | t }}
                        </button>
                    </div>
                </div>

                {% endform %}

            </div>
            {% endfor %}

            {% if paginate.pages > 1 %}
                {% render 'pagination' %}
            {% endif %}
        {% endpaginate %}
    </div>
</div>
