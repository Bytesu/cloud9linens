{% schema %}
  {
    "name": "Connected product",
    "settings": [
      {
        "type": "text",
        "id": "connected_text",
        "label": "Connected text"
      },
      {
        "type": "text",
        "id": "shipping_text",
        "label": "Shipping text"
      },
      {
        "type": "text",
        "id": "text_under_button",
        "label": "Text under add cart button",
        "info": "It will show when produst has no metafield value"
      },
      {
        "type": "text",
        "id": "custom_class",
        "label": "Custom class"
      }, {
        "type": "select",
        "id": "container",
        "label": "Container type",
        "default": "container",
        "options": [
          {
            "value": "container",
            "label": "Fixed width"
          }, {
            "value": "container-fluid",
            "label": "Stretched width"
          }, {
            "value": "container-narrow",
            "label": "Narrow width"
          }
        ]
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      }, {
        "type": "checkbox",
        "id": "default_open",
        "label": "Default open first tab on mobile",
        "default": true
      }
    ],
    "max_blocks": 6,
    "blocks": [
      {
        "type": "description",
        "name": "Product description",
        "limit": 1,
        "settings": [
          {
            "type": "paragraph",
            "content": "This tab will show the product's description"
          }, {
            "type": "text",
            "id": "header",
            "label": "Tab header",
            "default": "Product description"
          }
        ]
      }, {
        "type": "reviews",
        "name": "Product reviews",
        "limit": 1,
        "settings": [
          {
            "type": "header",
            "content": "Requirements",
            "info": "This section requires a product reviews app to work. Such as Shopify product reviews, Growave, Judge.me, Loox"
          },
          {
            "type": "text",
            "id": "header",
            "label": "Tab header",
            "default": "Product reviews"
          },
          {
            "type": "select",
            "id": "container",
            "label": "Container type",
            "default": "container",
            "options": [
              {
                "value": "container",
                "label": "Fixed width"
              }, {
                "value": "container-fluid",
                "label": "Stretched width"
              }, {
                "value": "container-narrow",
                "label": "Narrow width"
              }
            ]
          },
          {
            "type": "header",
            "content": "Other review app"
          }, {
            "type": "liquid",
            "id": "custom_liquid",
            "label": "Custom liquid",
            "info": "Paste the liquid code of the app review here"
          }
        ]
      }, {
        "type": "tab",
        "name": "Custom content",
        "settings": [
          {
            "type": "text",
            "id": "header",
            "label": "Tab heading",
            "default": "Shipping & Return",
            "placeholder": "Shipping & Return"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Tab content",
            "default": "<p>Shipping cost is based on weight. Just add products to your cart and use the Shipping Calculator to see the shipping price.</p><p>We want you to be 100% satisfied with your purchase. Items can be returned or exchanged within 30 days of delivery.</p>"
          }, {
            "type": "page",
            "id": "content_page",
            "label": "Tab content from page"
          }
        ]
      }, {
        "type": "liquid",
        "name": "Custom liquid",
        "settings": [
          {
            "type": "text",
            "id": "header",
            "label": "Tab heading",
            "default": "Tab heading"
          }, {
            "type": "liquid",
            "id": "custom_liquid",
            "label": "Custom liquid"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Connected product"
      }
    ]
  }
{% endschema %}

<style>

  .connected__products ul.slick-dots {
    display: flex;
    justify-content: center;
    width: 100%;
    bottom: -35px;
    padding-left: 30px;
    padding-right: 30px;
  }

  .connected__products .slick-dots li button:before {
    font-family: 'slick';
    font-size: 6px;
    line-height: 20px;
    position: absolute;
    top: 0;
    background-color: #0000001c;
    left: 0;
    width: 100%;
    height: 3px;
    content: '';
    text-align: center;
    opacity: 1;
    color: black;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .connected__products .slick-dots li {
    width: 50px;
  }

  .connected__products .slick-dots li.slick-active button:before {
    opacity: 1;
    color: black;
  }

  .connected__products .slick-dots li.slick-active button:after {
    font-family: 'slick';
    font-size: 6px;
    line-height: 20px;
    position: absolute;
    top: 0;
    opacity: 1;
    background: #000000a3;
    left: 0;
    width: 100%;
    height: 3px;
    content: '';
    text-align: center;
    color: black;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    z-index: 1;
    animation-name: progress____bar;
    animation-timing-function: linear;
    animation-duration: 3000ms;
    animation-delay: 0;
  }

  .connected__products .slick-prev {
    left: -35%;
  }

  .connected__products .slick-next {
    right: -35%;
  }

  .connected__products .slick_arrow {
    width: 40px;
    height: 40px;
    stroke: #000;
    stroke-width: 2px;
    z-index: 1;
    transform: translateX(35%);
  }


  @keyframes progress____bar {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
</style>

<script>
  $(document).ready(function() {
    $(".connected_product_media_img").slick({
      infinite: true,
      arrows: true,
      dots: true,
      autoplay: true,
      autoplaySpeed: 2000,
      speed: 1000,
      slidesToShow: 1,
      slidesToScroll: 1,
      prevArrow: '<svg class="slick-prev slick_arrow" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" /></svg>',
      nextArrow: '<svg class="slick-next slick_arrow" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" /></svg>',
      responsive: [
        {
          breakpoint: 800,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: true,
            dots: true,
            arrows: true
          }
        }
      ]
    });
  });
</script>