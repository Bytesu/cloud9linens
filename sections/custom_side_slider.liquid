<div class="mw_side_image_slider">
    <div class="cus_side_slider alignment-{{section.id}}">
  <div class="side_slider_content">
    <div><h3 class="cus_side_color cus_fonts_bodoni">{{section.settings.head_text}}</h3></div>
    <div class="subhead"><h4>{{section.settings.subheading}}</h4></div>
    <div>{{section.settings.desc}}</div>
    {% if section.settings.para != blank %}
    <div>{{section.settings.para}}</div>
    {% endif %}
    <div style="text-align:center;" class="cus_side_color side_sec_bottom_txt">{{section.settings.bottom_text}}</div>
  </div>
  <div class="side_image_slider mw_slide_mob-{{section.id}} mw_slide_batn" {% if section.settings.background-image !="blank" %} style="background-image: url({{ section.settings.background-image | img_url: 'master' }});"{% endif %}>
    <div class="right_side_content">
    <h3 class="cus_side_color cus_fonts_bodoni">{{section.settings.right_side_head}}</h3>
    <h4>{{section.settings.right_side_desc}}</h4>
    </div>
  <div class="right_side_slider">
    {% for block in section.blocks %}
    <div class="side_img_slide">
      {% if block.settings.slide_image != blank %}
				{{ block.settings.slide_image | img_url: 'master' | img_tag }}
        {% if block.settings.txtimage != blank %}
        <div class="txton_image">{{block.settings.txtimage}}</div>
        {% endif %}
				{% endif %}
    </div>
    {% endfor %}
  </div>
  </div>
  </div>
</div>

   


{% schema %}
{
  "name": "Side images slider",
  "tag": "section",
  "class": "slideshow",
  "max_blocks": 8,
  "settings": [
     {
       "type": "text",
       "id": "head_text",
       "label": "Heading"
     },
     {
       "type": "text",
       "id": "subheading",
       "label": "Subheading"
     },
    {
      "type": "textarea",
      "id": "desc",
      "label": "image slider Description"
    },
    {
      "type": "textarea",
      "id": "para",
      "label": "Welcome message"
    },
    {
       "type": "richtext",
       "id": "bottom_text", 
       "label": "Bottom heading"
     },
     {
      "type": "text",
      "id": "right_side_head",
      "label": "Right side heading"
     },
     {
      "type": "richtext",
      "id": "right_side_desc",
      "label": "Right side para"
     },
     {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background-image"
     }

  
  ], 
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "slide_image",
           "label": "Image"
         },
         {
           "type": "textarea",
           "id": "txtimage",
           "label": "Text on image"
         }
       ]
     }
   ],
   "presets": [
    {
      "name": "Custom side Slider"
    }
  ]
  }
{% endschema %}
<style>
  @media only screen and (min-width: 768px) {

    .cus_side_slider {
        display: flex;
        width: 95%;
        margin: auto;
        gap: 10%;
     }
     .side_slider_content {
       width: 60%;
       padding: 20px;
     }
     .side_image_slider {
       width: 40%;
     }
}
.side_slider_content {
       padding: 20px;
     }
      .cus_side_color{
        color:#8c1818;
      }
      .mw_side_image_slider h3, p {
          letter-spacing: 2px;
      }
      .right_side_content h3{
        margin-bottom: 20px;
      }
      
      .side_img_slide img {
        width: 100%;
        height: auto;
      }

      .side_img_slide {
        position: relative;
      }

      .txton_image {
        position: absolute;
        bottom: 20%;
        font-size: 12px;
        text-align: center;
        transform: translate(-50%,-50%);
        left: 50%;
        color: #fff;
        width: 70%;
        font-family: 'Bodoni 72 Smallcaps';
      }

      .txton_image p{
        padding-bottom: 15px;
      }
      
</style>    
        <script>
          $(document).ready(function() {
            $('.right_side_slider').slick({
              slidesToShow: 1,
              slidesToScroll: 1,
              autoplay: true,
              autoplaySpeed: 2000,
              dots: true,
            });
          });
        </script>

